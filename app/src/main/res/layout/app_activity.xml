<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    android:theme="@style/ThemeOverlay.VehicleDashboard.FullscreenContainer"
    tools:context=".presentation.ui.AppActivity">

    <com.github.vehicledashboard.presentation.ui.custom.MeterView
        android:id="@+id/speedometer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        app:barBackgroundColor="?attr/backgroundColor"
        app:barColor="@color/black"
        app:barMajorStep="20"
        app:barMaxValue="280"
        app:barMinorStep="10"
        app:barValuePadding="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>